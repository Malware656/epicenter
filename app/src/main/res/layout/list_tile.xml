<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/tile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/tile_icon"
        android:src="@drawable/folder"
        android:padding="2dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tile_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:text="@string/test_message"
        android:textColor="@color/navy"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/leading_icon"
        app:layout_constraintStart_toEndOf="@+id/tile_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tile_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:maxLines="1"
        android:text="@string/test_message"
        android:textColor="@color/navy"
        android:textSize="14sp"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/leading_icon"
        app:layout_constraintStart_toEndOf="@+id/tile_icon"
        app:layout_constraintTop_toBottomOf="@+id/tile_title" />
    <ImageButton
        android:id="@+id/leading_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_leading"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/navy"
        android:visibility="invisible"
        android:contentDescription="@string/leading_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>